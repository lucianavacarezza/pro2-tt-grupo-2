<!DOCTYPE html>
<html lang="es">
    <%- include("./partials/head") %>
<body>
	<%- include("./partials/headerLogueado") %>

	<!-- Novedades -->
	<div class="container productsWrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="productsTitle">Editar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/products/edit/id/<%=productos.id %>" method="POST">
				<div>
					<label for="imagenName">Imagen del producto</label>
					<input id="imagenName" type="file" name="nombreArchivoImagen" value="<%=productos.nombreArchivoImagen%>" required> </input>
				</div>
				<div>
					<label for="productName">Nombre del producto</label>
					<input id="productName" type="text" name="nombre" value="<%=productos.nombre%>" required> </input>
				</div>
				<div>
					<label for="descriptionProduct">Descripci√≥n del producto</label>
					<input id="descriptionProduct" type="text" name="descripcion" value="<%=productos.descripcion%>" required> </input>
				</div>
				<div>
					<button class="botonesNaranja" type="submit">Enviar </button>
				</div>
			</form>
		</div>
	</div>

	<%- include("./partials/footerLogueado") %>

</body>
</html>