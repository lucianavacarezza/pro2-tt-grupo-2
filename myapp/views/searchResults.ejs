<body>

	<%- include("./partials/header.ejs") %>

	<div class="container productsWrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="productsTitle">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products.. -->
			<% if (resultado != "No contamos con este producto") { %>
				<div class="products">
					<section class="productBox">
						<a href="/products">
							<figure class="productBoxImage">
								<img src="<%=resultado[0].imagenDelProducto%>" alt="absolut Raspberry">
							</figure>
							<article class="productBoxData">
								<h2><%= resultado[0].nombreDelProducto %></h2>
								<p><%= resultado[0].descripcion %></p>
								<p>Comentarios: <%=resultado[0].comentarios.length%></p>
							</article>
						</a>
					</section>
			</div>
			<% } else if (resultado == "No contamos con este producto") { %>
				<h1> No contamos con ese producto</h1> <% } %>
			
			
			
			<h2 class="col-12"> 
			</h2>
		</div>
	</div>
	
	<%- include("./partials/footerLogueado") %>

