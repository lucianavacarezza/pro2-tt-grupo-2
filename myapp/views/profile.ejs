<!DOCTYPE html>
<html lang="es">
	<%- include("./partials/head") %>
<body>
	
	<% if (sesion != undefined) { %>
		<%- include("./partials/headerLogueado") %>
	<%} else { %>
		<%- include("./partials/header") %>
	<% } %>
	
	<section class="infoUsuario container productsWrapper">
		<div class="row">
			<div class="img-container offset-3 col-2 perfiles">
				<img src= "/images/users/<%=usuario.foto%>" alt="foto de perfil" class="fotoPerfil"> 
			</div>
			<div class="data-container col-6">
				<div class="d-flex alignItemsCenter perfiles ">
					<h1 class="mainTitle"> <%= usuario.nombre %>
						<% if (sesion != undefined && sesion.id == usuario.id) { %>
							<a href="/users/profile/edit/<%=sesion.id%>">
								<i class="fas fa-cog"></i>								
							</a>
							<div >
								<a href="/users/profile/edit/<%=sesion.id%>"> <button class="botonesNaranja" type="submit"> Editar perfil</button> </a>
						</div>
						</h1>
						<% } else {%>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
					<% } %>
				</div>
			<div>
				<i><%= usuario.email %></i>
			</div>
				<div>
					<ul class="">
						<li> <%= usuario.productos.length%> productos</li>
						<li>200 seguidores</li>
						<li> <%=usuario.comentario.length%> comentarios </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container productsWrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="productsTitle">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<div class="products ancho">
				<% for (let i = 0; i < usuario.productos.length; i++){%>
					<section class="productBox">
						<a href="/products/id/<%= usuario.productos[i].id %>">
							<figure class="productBoxImage">
								<img src="/images/products/<%=usuario.productos[i].nombreArchivoImagen%>" alt="cafetera moulinex">
							</figure>
							<article class="productBoxData">
								<h2><%=usuario.productos[i].nombre %></h2>
								<p> <%=usuario.productos[i].descripcion %></p>
								<p>Comentarios: <%= usuario.productos[i].comentario.length %></p> 
							</article>
						</a>
					</section>
					
				<% } %>
					 
			</div>
		</div>
	</div>


	<!-- /Mis productos -->

	<%- include("./partials/footerLogueado") %>

</body>	
</html>