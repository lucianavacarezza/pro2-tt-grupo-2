<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

	<body>

		<% if (locals.usuario != undefined) { %>
			<%- include("./partials/headerLogueado") %>
		<%} else { %>
			<%- include("./partials/header") %>
		<% } %>


			<div class="container productsWrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="productsTitle">Registrate</h2>
					</div>
					<!-- Show the "ultimos" products. -->
					<h2 class="col-12">
						<form action="/users/register" method="POST">
							<div class="registrarse">
								<label for="email">Email:</label>
								<input id="email" type="email" name="email" value=" <%= locals.old !== undefined && old.email ? old.email : "" %>" required>
								<% if (locals.errors && errors.email) { %>
									<p class="error">
										<%= errors.email.msg %>
									</p>
									<% } %>
							</div>
							<div class="registrarse">
								<label for="user">Usuario:</label>
								<input id="nombre" type="text" name="nombre" value=" <%= locals.old !== undefined && old.nombre ? old.nombre : "" %>" required>
								<% if (locals.errors && errors.nombre) { %>
									<p class="error">
										<%= errors.nombre.msg %>
									</p>
									<% } %>
							</div>
							<div class="registrarse">
								<label for="user">Contrase√±a:</label>
								<input id="contrasenia" type="password" name="contrasenia" value=" <%= locals.old !== undefined && old.contrasenia ? old.contrasenia : "" %>" required>
								<% if (locals.errors && errors.contrasenia) { %>
									<p class="error">
										<%= errors.contrasenia.msg %>
									</p>
									<% } %>
							</div>
							<div class="registrarse">
								<label for="birthdate">Fecha de nacimiento:</label>
								<input id="fecha" type="date" name="fecha" value=" <%= locals.old !== undefined && old.fecha ? old.fecha : "" %>" required>
							</div>
							<div class="registrarse">
								<label for="doc">Documento:</label>
								<input id="dni" type="number" name="dni" value=" <%= locals.old !== undefined && old.dni ? old.dni : "" %>" required>
							</div>
							<div class="registrarse">
								<label for="picture">Foto de perfil:</label>
								<input id="foto" type="text" name="foto" value=" <%= locals.old !== undefined && old.foto ? old.foto : "" %>">
								<% if (locals.errors && errors.foto) { %>
									<p class="error">
										<%= errors.foto.msg %>
									</p>
									<% } %>
							</div>
							<div class="registrarse">
								<button class="botonesNaranja" type="submit">Enviar</button>
							</div>
						</form>
					</h2>
				</div>
			</div>



			<%- include("./partials/footerLogueado") %>

	</body>

</html>